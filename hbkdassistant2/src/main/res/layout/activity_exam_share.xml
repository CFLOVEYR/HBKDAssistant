        xmlns:hbkd="http://schemas.android.com/apk/res/com.tofirst.study.hbkdassistant"
        android:id="@+id/indicator_exam_share"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:textSize="15dp"
        hbkd:pstsIndicatorColor="@color/tab_indicator"
        hbkd:pstsIndicatorHeight="5dp" />
